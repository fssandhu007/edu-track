# Secrets for edutrack
# IMPORTANT: This file contains sensitive information. DO NOT COMMIT to git.

apiVersion: v1
kind: Secret
metadata:
  name: db-credentials
  namespace: edutrack
type: Opaque
stringData:
  # Replace with your Cloud SQL Connection Name (e.g. project:region:instance)
  # OR Private IP if running in the same VPC
  DB_HOST: "YOUR_CLOUD_SQL_CONNECTION_NAME_OR_IP"
  DB_PORT: "5432"
  DB_USER: "postgres"
  # Replace with your actual Postgres password
  DB_PASSWORD: "CHANGE_ME_TO_YOUR_PASSWORD"
---
apiVersion: v1
kind: Secret
metadata:
  name: student-db-credentials
  namespace: edutrack
type: Opaque
stringData:
  DB_NAME: "edutrack_students"
---
apiVersion: v1
kind: Secret
metadata:
  name: course-db-credentials
  namespace: edutrack
type: Opaque
stringData:
  DB_NAME: "edutrack_courses"
---
apiVersion: v1
kind: Secret
metadata:
  name: enrollment-db-credentials
  namespace: edutrack
type: Opaque
stringData:
  DB_NAME: "edutrack_enrollments"
